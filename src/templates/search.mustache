<html>
    <body>
        <h1>Search for a Food</h1>
        <form method="POST" action="/search">
            <input type="text" name="query" value="{{query}}" />
            <button type="submit">Search</button>
        </form>

        {{#previousSearch}}
            <p>Last searched for: {{previousSearch}}</p>
        {{/previousSearch}}

        <ul>
            {{#results}}
                <li>{{name}}</li>
            {{/results}}
        </ul>
    </body>
</html>